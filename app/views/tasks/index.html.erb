<p id="notice"><%= notice %></p>

<h1>Tasks</h1><h4>user:<%= current_user.email %> </h4>

<table border="1">
  <thead>
    <tr>
      <th> Title </th>
      <th> Done </th>
      <th> User </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
      <% if task.user.email == current_user.email || current_user.admin %> 
        <td><%= task.title %></td>
        <td><%= task.done %></td>
        <td><%= task.user.email %></td>
       
        <td><%= link_to '| Show |', task %></td>
        <td><%= link_to '| Edit |', edit_task_path(task) %></td>
        <td><%= link_to '| Destroy |', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '| New Task |', new_task_path %>
