

  <p id="notice"><%= notice %></p>

  <h1 class="display-2" >Tasks</h1><br>
  <div class="alert alert-secondary" role="alert">
    <h4>Current user: <span class="badge badge-secondary"><%= current_user.email %></span></h4>
  </div>
  <div>
    <%= link_to '| New Task |', new_task_path %>
    <%= link_to 'Home |', pages_home_path %>
  </div>
  <br>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th> Title </th>
        <th> Done </th>
        <th> User </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
        <% if task.user.email == current_user.email || current_user.admin %> 
          <td><%= task.title %></td>
          <td><%= task.done %></td>
          <td><%= task.user.email %></td>
        
          <td><%= link_to ' Show ', task , class: 'btn btn-outline-light' %></td>
          <td><%= link_to ' Edit ', edit_task_path(task) , class: 'btn btn-outline-light' %></td>
          <td><%= link_to ' Destroy ', task, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-outline-danger' %></td>
        <% end %>      
        </tr>
      <% end %>
    </tbody>
  </table>



  <div>
    <%= link_to '| New Task |', new_task_path %>
    <%= link_to 'Home |', pages_home_path %>
  </div>



</div>
